<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/include_head_login"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/profile_bg"/>

        <ImageView
            android:id="@+id/home_pager_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="206dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/home_pager_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/home_pager_image"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/home_pager_image"
            android:text="1111"
            android:textSize="20sp"/>

        <CheckBox
            android:id="@+id/home_pager_check"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/imageView2"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/home_set_bg"
            android:button="@null"
            android:drawableLeft="@mipmap/profile_action_set_icon"
            android:drawablePadding="5dp"
            android:text="设置"/>

        <TextView
            android:id="@+id/home_pager_text_gone"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/imageView2"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/home_set_bg"
            android:gravity="center"
            android:text="重新登录"
            android:textSize="13sp"
            android:visibility="gone"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="订阅"
            android:textColor="#09145b"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0  丨"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="关注"
            android:textColor="#09145b"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0  丨"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="粉丝"
            android:textColor="#09145b"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0  "
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="点击加载更多"
        android:textColor="#000000"/>
</LinearLayout>
