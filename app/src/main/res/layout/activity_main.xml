<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jinhu.toptoday.activity.MainActivity">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/rdo_grp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_rdo_btn"
            style="@style/main_rdo_btn"
            android:text="首页"/>

        <RadioButton
            android:id="@+id/video_rdo_btn"
            style="@style/main_rdo_btn"
            android:text="视频"/>

        <RadioButton
            android:id="@+id/attention_rdo_btn"
            style="@style/main_rdo_btn"
            android:text="关注"/>

        <RadioButton
            android:id="@+id/my_rdo_btn"
            style="@style/main_rdo_btn"
            android:text="我的"/>
    </RadioGroup>
</LinearLayout>
